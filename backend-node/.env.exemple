#############################################
# ParentFacile – Exemple de configuration .env
# ---------------------------------------------
# Copiez ce fichier sous le nom `.env`,
# puis ajustez les valeurs selon votre environnement (dev / prod).
#############################################

# --- API ---
PORT=4000
NODE_ENV=development
# Liste des origines front autorisées, séparées par des virgules
# Ex: http://localhost:5174,http://127.0.0.1:5174,https://parentfacile.fr
ALLOWED_ORIGINS=http://localhost:5174

# --- MySQL ---
# ⚠️ En production, utilisez un utilisateur restreint avec droits limités
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=changeme
MYSQL_DB=parentfacile

# --- SMTP / Email ---
# Gmail ou autre service SMTP compatible (Sendinblue, Mailjet...)
# PORT 465 = SSL / 587 = TLS STARTTLS
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=example@gmail.com
SMTP_PASS=app_password_here
# Nom visible dans les emails envoyés
SMTP_FROM="ParentFacile <example@gmail.com>"
# Destinataire principal des formulaires de contact (boîte de réception admin)
CONTACT_TO=contact@example.com

# --- Authentification Admin ---
# Clé secrète JWT (doit être unique et longue, changez-la avant la mise en prod)
ADMIN_JWT_SECRET=une_chaine_random_longue_inchangeable_en_prod
# Nom du cookie JWT
ADMIN_COOKIE_NAME=admintoken
# true en prod derrière HTTPS, sinon false en dev
ADMIN_COOKIE_SECURE=false

# --- (Optionnel) Compte admin initial (créé au premier démarrage) ---
# ⚠️ Ces valeurs ne servent qu'à la création initiale, ensuite elles sont ignorées.
ADMIN_SEED_EMAIL=tonemail@example.com
ADMIN_SEED_PASSWORD=tonmotdepasse